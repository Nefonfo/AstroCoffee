---
export interface Props {
    title: string,
    description?: string,
    alternative?: boolean
}

const { title, description, alternative=false } = Astro.props
---

<div class={`box-card group${alternative ? ' alternative-box': ''}`}>
    {description && (
        <p class={`font-light text-2xl ${!alternative ? 'text-yellow-700': 'text-zinc-900'} leading-relaxed italic opacity-0 group-hover:opacity-100 transition-opacity ease-in-out duration-500`}>
        {description}    
        </p>
    )}
    <h1 class={`box-card-header ${!alternative ? 'text-zinc-900 group-hover:text-yellow-600': 'text-yellow-600 group-hover:text-zinc-900'} transition-colors ease-in-out duration-200`}>
        {title}
    </h1>
</div>