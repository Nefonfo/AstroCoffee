---
import { Picture, Image } from "@astrojs/image/components";
import { NavPositionEnum } from "../components/NavBar.astro";
import Main from "../layouts/Main.astro";
import BoxCard from "../components/cards/BoxCard.astro";

---
<Main 
    title="Welcome"
    metaDescription="This is a website part of Nefonfo's portafolio. Inspired in a Coffee Shop."
    navBarStyles={{
        navPosition: NavPositionEnum.fixed,
        navColor:{
            scrollY: 150,
            primary: "bg-zinc-900",
            alternative: "bg-transparent"
        },
        logoColor:{
            scrollY: 150,
            primary: "text-yellow-600",
            alternative: "text-white"
        },
        menuColor:{
            scrollY: 150,
            primary: "text-yellow-600",
            alternative: "text-white"
        }
    }}
>
    <div class="group relative w-full h-[80vh] pt-20">
        <Picture 
            class="absolute top-0 w-full h-[80vh] object-cover grayscale-0 group-hover:grayscale transition-all ease-out duration-700" 
            src={import('../images/coffee-cup.jpg')}
            alt="Coffee Banner"
            widths={[600, 1200, 1800]}
            sizes="(max-width: 800px) 100vw, 800px"
            format='webp'
        />
        <div class="font-serif relative h-full w-full flex flex-col items-center justify-center gap-y-10">
            <h1 class="text-center text-white text-5xl md:text-7xl group-hover:text-yellow-300 transition-colors ease-in-out duration-700">The Real</h1>
            <h2 class="text-center text-white text-7xl md:text-9xl group-hover:text-yellow-300 transition-colors ease-in-out duration-700">Coffee</h2>
        </div>
    </div>
    <div class="w-full py-12 px-6 md:px-12 lg:px-32 flex flex-wrap lg:flex-nowrap items-center justify-evenly gap-y-8 gap-x-12">
        <div class="md:max-w-3xl grow order-2 lg:order-1 flex flex-col gap-y-4 items-center md:items-start">
            <h1 class="hero-header">The Pure Coffee</h1>
            <p class="text-white text-xl leading-loose text-justify">Lorem, ipsum dolor sit amet consectetur adipisicing elit. Hic, impedit? Nisi tempore eaque nobis, explicabo commodi eius incidunt reprehenderit voluptas quaerat, possimus hic maiores doloremque magnam dolorum eos. Praesentium, ipsam.</p>
            <a href="" class="btn">View More</a>
        </div>
        <svg xmlns="http://www.w3.org/2000/svg" class="shrink-0 w-[10rem] md:w-[15rem] lg:w-[25rem] order-1 lg:order-2 text-yellow-600 icon icon-tabler icon-tabler-coffee" viewBox="0 0 24 24" stroke-width="1" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
            <path d="M3 14c.83 .642 2.077 1.017 3.5 1c1.423 .017 2.67 -.358 3.5 -1c.83 -.642 2.077 -1.017 3.5 -1c1.423 -.017 2.67 .358 3.5 1"></path>
            <path d="M8 3a2.4 2.4 0 0 0 -1 2a2.4 2.4 0 0 0 1 2"></path>
            <path d="M12 3a2.4 2.4 0 0 0 -1 2a2.4 2.4 0 0 0 1 2"></path>
            <path d="M3 10h14v5a6 6 0 0 1 -6 6h-2a6 6 0 0 1 -6 -6v-5z"></path>
            <path d="M16.746 16.726a3 3 0 1 0 .252 -5.555"></path>
        </svg>
    </div>
    <div class="w-full mt-8 mb-12">
        <h1 class="font-serif text-center text-5xl md:text-7xl text-white transition-colors ease-in-out duration-700">Our Philosophy</h1>
    </div>
    <div class="w-full flex flex-wrap lg:flex-nowrap gap-x-4 gap-y-4 px-4 md:px-8 py-6">
        <BoxCard title='Textures' description='Lorem, ipsum dolor sit amet consectetur adipisicing elit. Cumque nam perferendis eos nisi blanditiis nostrum rem.' />
        <BoxCard title='Flavor' description='Lorem, ipsum dolor sit amet consectetur adipisicing elit. Cumque nam perferendis eos nisi blanditiis nostrum rem.' />
        <BoxCard title='Essence' description='Lorem, ipsum dolor sit amet consectetur adipisicing elit. Cumque nam perferendis eos nisi blanditiis nostrum rem.' />
    </div>
</Main>