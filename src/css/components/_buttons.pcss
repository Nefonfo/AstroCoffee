.btn {
    @apply flex;

    @apply transition-colors ease-in-out duration-300; 
    @apply px-4 py-2 text-lg;
    @apply md:text-xl lg:text-2xl;
}

.btn-yellow {
    @apply bg-yellow-600 hover:bg-yellow-800 text-zinc-900 hover:text-white;
}

.btn-black {
    @apply bg-zinc-900 hover:bg-zinc-600 text-white;
}



