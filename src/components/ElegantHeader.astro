---
export interface Props {
	title: string
}

const {title} = Astro.props
---
<div class="w-full flex flex-col items-center justify-center px-3 md:px-12 pt-12 pb-6 gap-y-12">
    <div class="w-full px-3 md:px-0 md:max-w-4xl">
        <hr class="mb-4 w-3/4 h-1 mx-auto bg-yellow-600 border-0">
        <h2 class="font-serif text-4xl md:text-6xl text-white text-center">{title}</h2>
        <hr class="mt-4 w-1/2 h-1 mx-auto bg-yellow-600 border-0">
    </div>
</div>