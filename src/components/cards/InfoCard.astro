---
export interface Props {
	title: string,
	description: string,
	buttonText?: string,
	buttonHref?: string,
	inverseOrder?: boolean
}

const {title, description, buttonText, buttonHref, inverseOrder = false} = Astro.props
---

<div class="w-full my-8 md:my-24 py-12 px-6 md:px-12 lg:px-32 flex flex-wrap lg:flex-nowrap items-center justify-evenly gap-y-8 gap-x-12">
	{
		inverseOrder &&
            <slot/>
	}
    <div class={`md:max-w-3xl grow flex flex-col gap-y-4 items-center md:items-start`}>
        <h1 class="secondary-header text-yellow-600">{title}</h1>
        <p class="my-3 text-white text-xl leading-loose text-justify">{description}</p>
		{
			buttonText && (
                        <a href={buttonHref} class="btn btn-yellow">{buttonText}</a>
			)
		}
    </div>
	{
		!inverseOrder &&
            <slot/>
	}
</div>