---
import { Picture, Image } from "@astrojs/image/components";
import { NavPositionEnum } from "../components/NavBar.astro";
import Main from "../layouts/Main.astro";

---
<Main 
    title="Welcome"
    metaDescription="This is a website part of Nefonfo's portafolio. Inspired in a Coffee Shop."
    navBarStyles={{
        navPosition: NavPositionEnum.fixed,
        navColor:{
            scrollY: 150,
            primary: "bg-zinc-900",
            alternative: "bg-transparent"
        },
        logoColor:{
            scrollY: 150,
            primary: "text-yellow-600",
            alternative: "text-white"
        },
        menuColor:{
            scrollY: 150,
            primary: "text-yellow-600",
            alternative: "text-white"
        }
    }}
>
    <div class="group relative w-full h-[80vh] pt-20">
        <Picture 
            class="absolute top-0 w-full h-[80vh] object-cover grayscale-0 group-hover:grayscale transition-all ease-out duration-700" 
            src={import('../images/coffee-cup.jpg')}
            alt="Coffee Banner"
            widths={[600, 1200, 1800]}
            sizes="(max-width: 800px) 100vw, 800px"
            format='webp'
        />
        <div class="font-mono relative h-full w-full flex flex-col items-center justify-center gap-y-10">
            <h1 class="text-center text-white text-5xl md:text-7xl group-hover:text-amber-300 transition-colors ease-in-out duration-700">The Real</h1>
            <h2 class="text-center text-white text-7xl md:text-9xl group-hover:text-amber-300 transition-colors ease-in-out duration-700">Coffee</h2>
        </div>
    </div>
    <div class="w-full py-12 px-6 md:px-12 lg:px-32 flex flex-wrap items-center justify-evenly gap-y-8 gap-x-4">
        <div class="order-2 md:order-1 w-full md:w-5/12 lg:w-7/12 flex flex-col gap-y-4 items-center md:items-start">
            <h1 class="hero-header">About Us</h1>
            <p class="text-white text-xl leading-loose">Lorem, ipsum dolor sit amet consectetur adipisicing elit. Hic, impedit? Nisi tempore eaque nobis, explicabo commodi eius incidunt reprehenderit voluptas quaerat, possimus hic maiores doloremque magnam dolorum eos. Praesentium, ipsam.</p>
            <a href="" class="btn">View More</a>
        </div>
        <div class="overflow-hidden order-1 md:order-2 w-full md:w-5/12 lg:w-4/12 flex justify-center">
            <Picture 
                class="object-contain transform scale-100 hover:scale-125 transition-transform ease-in-out duration-1000" 
                src={import('../images/coffee-about.jpg')}
                alt="Coffee Banner"
                widths={[600, 1200, 1800]}
                sizes="(max-width: 800px) 100vw, 800px"
                format='webp'
            />
        </div>
    </div>
</Main>