---
import Footer from '../components/Footer.astro'
import NavBar, { NavPositionEnum, ScrollColorProps } from '../components/NavBar.astro'

import menuItems from '../fixtures/menuItems.json'

import '../css/styles.css';

export interface NavBarStyles {
    navPosition: NavPositionEnum,
    navColor: ScrollColorProps,
    logoColor: ScrollColorProps,
    menuColor: ScrollColorProps
}

export interface Props {
    title: string,
    metaDescription?: string
    navBarStyles: NavBarStyles 
}

const { title, navBarStyles, metaDescription } = Astro.props
---
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/x-icon" href="favicon.svg">
    {
        metaDescription && (
            <meta name="description" content={metaDescription}>
        )
    }
    <title>Astro Coffee - {title}</title>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Arvo:wght@400;700&family=Gloock&display=swap');
    </style>
</head>
<body class="bg-zinc-900">
    <NavBar 
        menuItems={menuItems} 
        {...navBarStyles}
    />
    <slot />
    <Footer />
</body>
</html>